@model List<Marks>
@{
    ViewData["Title"] = "Marks";
}

<table style="width:100%;margin-top:40px;">
    <tr class="header">
        <td style="padding:10px;">Date</td>
        <td style="padding:10px;">Course</td>
        <td style="padding:10px;">Mark</td>
        <td style="padding:10px;">Comment</td>
        <td style="padding:10px;">Ind</td>
        <td style="padding:10px;">Team</td>
        <td style="padding:10px;">Org</td>
        <td style="padding:10px;">HmWrk</td>
        <td style="padding:10px;">Init</td>
    </tr>
    @foreach (var mark in Model)
    {
        if (!string.IsNullOrWhiteSpace(mark.Divider))
        {
    <tr class="header">
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td style="text-align:center;padding:10px;"><b>@mark.Divider</b></td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
    </tr>
        }
        else
        {
            <tr>
                <td style="padding:10px;">@mark.Date.Replace(".", "/")</td>
                <td style="padding:10px;">@mark.Course</td>
                <td style="padding:10px;">@mark.Mark</td>
                <td style="padding:10px;">@mark.Comment</td>
                <td style="padding:10px;">@mark.Ind</td>
                <td style="padding:10px;">@mark.Team</td>
                <td style="padding:10px;">@mark.Org</td>
                <td style="padding:10px;">@mark.Homework</td>
                <td style="padding:10px;">@mark.Init</td>
            </tr>
        }
    }
</table>
<style>
    tr:nth-child(odd) {
        background-color: #202020;
    }

    .header {
        background-color: #1a7cba !important;
        color: white;
        padding: 10px;
        font-weight: bold;
    }
</style>