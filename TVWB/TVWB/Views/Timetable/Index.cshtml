@model TimetableInfo
@{
    ViewData["Title"] = "Timetable";
}
<h4>Hey @Model.FirstName, here's your timetable!</h4>

<table style="width:100%;margin-top:40px;">
    <tr class="header">
        <td style="padding:10px;">Period</td>
        <td style="padding:10px;">Subject</td>
        <td style="padding:10px;">Classroom</td>
        <td style="padding:10px;">Teacher</td>
    </tr>
    @for(int i = 0; i < Model.Classes.Count; i++)
    {
        var cObj = Model.Classes[i];
        <tr>
            <td style="padding:10px">@cObj.Period.Replace("0", "") @(cObj.isHomeRoom ? " (Homeroom)" : "")</td>
            <td style="padding:10px">
                @cObj.ClassCode
            </td>
            <td>
                @cObj.ClassRoom
            </td>
            <td>
                @cObj.Teacher
            </td>
        </tr>
    }
</table>
<table style="width:100%;">
    <tr class="header">
        <td style="padding:10px;">Student #: @Model.StudentNum</td>
        <td>OEN #: @Model.OenNum</td>
        <td>Grade: @Model.Grade</td>
        <td>Locker #: @Model.LockNum</td>
    </tr>
</table>
<style>
    tr:nth-child(odd) {
        background-color: #202020;
    }
    .header {
        background-color: #1a7cba !important;
        color: white;
        padding: 10px;
        font-weight: bold;
    }
</style>